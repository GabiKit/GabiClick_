(function() {
    const intervalSeconds = 10; // co ile sekund pobierać wyniki
    let count = 1;

    const downloadScores = () => {
        const worldwideScores = window.leaderboards?.worldwide || [];
        const blob = new Blob([JSON.stringify(worldwideScores, null, 2)], { type: "application/json" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = `worldwide_scores_${count}.json`; // kolejne pliki z numerem
        a.click();
        URL.revokeObjectURL(url);
        console.log(`Pobrano plik worldwide_scores_${count}.json`);
        count++;
    };

    // Pobieraj od razu, a potem co intervalSeconds
    downloadScores();
    const timer = setInterval(downloadScores, intervalSeconds * 1000);

    // Aby zatrzymać automatyczne pobieranie, w konsoli wpisz: clearInterval(timer);
})();
